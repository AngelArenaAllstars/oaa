<root>
  <styles>
    <include src="file://{resources}/styles/custom_game/core_points.css" />
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/core_points.js" />
  </scripts>

  <Panel hittest="false" class='ResourcePanel'>
    <Panel class="CorePointsIconPanel" onmouseover="UIShowTextTooltip(#corepoints)" onmouseout="UIHideTextTooltip()">
      <Image id="CorePointsIcon" />
    </Panel>
    <Panel class="CorePointsLabelPanel" onmouseover="UIShowTextTooltip(#corepoints_tip)" onmouseout="UIHideTextTooltip()">
      <Label id="CorePointsText" text="0" html="true" class="TitleFont" />
    </Panel>
  </Panel>
</root>
